<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="seniorCapstone.App">
	
	
    <Application.Resources>

		<ResourceDictionary>
			<Style x:Key="LogoImage" TargetType="ImageButton">
				<Setter Property="BackgroundColor"				Value="Transparent"/>
				<!--<Setter Property="TranslationY"					Value="-40"/>-->
				<Setter Property="WidthRequest"					Value="120"/>
				<Setter Property="HeightRequest"				Value="120"/>
				<Setter Property="VerticalOptions"				Value="CenterAndExpand"/>
				<Setter Property="HorizontalOptions"			Value="CenterAndExpand"/>
				<Setter Property="AbsoluteLayout.LayoutFlags"	Value="All"/>
				<Setter Property="AbsoluteLayout.LayoutBounds"	Value="0,0,1,.2"/>
			</Style>

			<Style x:Key="BackgroundImage" TargetType="Image">
				<Setter Property="AbsoluteLayout.LayoutFlags"	Value="All"/>
				<Setter Property="AbsoluteLayout.LayoutBounds"	Value="0,0,1,1"/>
				<Setter Property="Aspect"						Value="AspectFill"/>
				<Setter Property="Opacity"						Value="0.9"/>
			</Style>
			
			<Style x:Key="BackgroudFrames" TargetType="Frame">
				<Setter Property="Padding"						Value="0,5"/>
				<Setter Property="BackgroundColor"				Value="#8076786B"/>
				<Setter Property="BorderColor"					Value="AntiqueWhite"/>
				<Setter Property="CornerRadius"					Value="10"/>
				<Setter Property="HasShadow"					Value="False"/>
			</Style>

			<Style x:Key="BorderFrames" TargetType="Frame">
				<Setter Property="Padding"						Value="0"/>
				<Setter Property="BackgroundColor"				Value="White"/>
				<Setter Property="BorderColor"					Value="Black"/>
				<Setter Property="Opacity"						Value="100"/>
				<Setter Property="CornerRadius"					Value="10"/>
				<Setter Property="HasShadow"					Value="False"/>
			</Style>


			<Style x:Key="BackgroundEntries" TargetType="Entry">
				<!--<Setter Property="FontAttributes"				Value="Bold"/>-->
				<Setter Property="BackgroundColor"				Value="Transparent"/>
				<Setter Property="TextColor"					Value="AntiqueWhite"/>
				<Setter Property="PlaceholderColor"				Value="AntiqueWhite"/>
				<Setter Property="HorizontalOptions"			Value="FillAndExpand"/>
				<Setter Property="FontSize"						Value="Large"/>
			</Style>

			<Style x:Key="LoginButtons" TargetType="Button">
				<Setter Property="BackgroundColor"				Value="#896647"/>
				<Setter Property="FontAttributes"				Value="Bold"/>
				<Setter Property="TextColor"					Value="White"/>
				<Setter Property="CornerRadius"					Value="10"/>
			</Style>


			<Style x:Key="Account" TargetType="Frame">
				<Setter Property="Padding"						Value="0,5"/>
				<Setter Property="BackgroundColor"				Value="#80E1D3D3"/>
				<Setter Property="Opacity"						Value="0.5"/>
				<Setter Property="CornerRadius"					Value="20"/>
				<Setter Property="HasShadow"					Value="False"/>
			</Style>

			<Style x:Key="DisplayInfo" TargetType="Label">
				<Setter Property="FontAttributes"				Value="Bold"/>
				<Setter Property="TextColor"					Value="Black"/>
				<Setter Property="HorizontalOptions"			Value="FillAndExpand"/>
				<Setter Property="Margin"						Value="0"/>
				<Setter Property="Padding"						Value="0"/>
				<Setter Property="FontSize"						Value="Body"/>
			</Style>

			<Style x:Key="DisplayInfoHeader" TargetType="Label">
				<Setter Property="FontSize"						Value="Small"/>
				<Setter Property="FontAttributes"				Value="Italic"/>
				<Setter Property="TextColor"					Value="Black"/>
			</Style>

			<Style x:Key="WeatherMainPage" TargetType="Label">
				<Setter Property="FontSize"						Value="Small"/>
				<Setter Property="FontAttributes"				Value="Bold"/>
				<Setter Property="TextColor"					Value="White"/>
				<Setter Property="HorizontalOptions"			Value="Center"/>
			</Style>

		</ResourceDictionary>
		
		
    </Application.Resources>
	
	
</Application>