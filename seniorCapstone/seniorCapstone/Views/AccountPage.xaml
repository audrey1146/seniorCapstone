<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:ViewModel="clr-namespace:seniorCapstone.ViewModels"
             x:Class="seniorCapstone.Views.AccountPage"
			 Padding="10"
			 Title="EvenStreamin">

	<ContentPage.BindingContext>
		<ViewModel:AccountViewModel/>
	</ContentPage.BindingContext>

	<ContentPage.ToolbarItems>
		<ToolbarItem 
			Text="Home"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="MainPage"/>
		<ToolbarItem 
			Text="Field List"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="FieldListPage"/>
		<ToolbarItem 
			Text="Add Field"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="AddFieldPage"/>
		<ToolbarItem 
			Text="Run Pivot"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="RunPivotPage"/>
	</ContentPage.ToolbarItems>


	<ContentPage.Content>
		<AbsoluteLayout>
			<Image
				Source="AccountScreen"
				AbsoluteLayout.LayoutBounds="0, 0, 1, .4" 
				AbsoluteLayout.LayoutFlags="All"
				Style="{DynamicResource BackgroundImage}" >
			</Image>

			<StackLayout 
				AbsoluteLayout.LayoutBounds="0.6, 0.6, 1, .2" 
				AbsoluteLayout.LayoutFlags="All"
				Spacing="20"
				VerticalOptions="Start">
				
			<!-- Could add grid info in one row of number of fields / number running / something else ? -->

				<Frame 
					Style="{DynamicResource EntryFrames}" 
					BackgroundColor="#7AA6B1">
					<Label x:Name="username"
							Text="Username"
							Style="{DynamicResource AccountInfo}" />
				</Frame>

				<Frame 
					Style="{DynamicResource EntryFrames}" 
					BackgroundColor="#7AA6B1">
					<Label x:Name="firstname"
							Text="First Name"
							Style="{DynamicResource AccountInfo}"/>
				</Frame>

				<Frame 
					Style="{DynamicResource EntryFrames}" 
					BackgroundColor="#7AA6B1">
					<Label x:Name="lastname"
							Text="Last Name"
							Style="{DynamicResource AccountInfo}"/>
				</Frame>

				<Frame 
					Style="{DynamicResource EntryFrames}" 
					BackgroundColor="#7AA6B1">
					<Label x:Name="email"
							Text="Email"
							Style="{DynamicResource AccountInfo}"/>
				</Frame>

				<!-- Use this if you want to allow the user to edit their account
				<Button Grid.Row="0" Grid.Column="1"
					Margin="20,20,20,0"
					Clicked="RegisterButton_Clicked"
					Text="Register"
					BackgroundColor="#617C29"
					Style="{DynamicResource LoginButtons}">
				</Button>
				-->
			</StackLayout>
		</AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>