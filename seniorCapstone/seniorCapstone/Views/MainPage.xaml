<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:ViewModel="clr-namespace:seniorCapstone.ViewModels"
             x:Class="seniorCapstone.MainPage"
			 Title="EvenStreamin">

	<ContentPage.BindingContext>
		<ViewModel:MainViewModel/>
	</ContentPage.BindingContext>

	<ContentPage.ToolbarItems>
		<ToolbarItem 
			Text="Field List"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="FieldListPage"/>
		<ToolbarItem 
			Text="Add Field"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="AddFieldPage"/>
		<ToolbarItem 
			Text="Run Pivot"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="RunPivotPage"/>
		<ToolbarItem 
			Text="Account"
			Priority="1"
			Order="Secondary"
			Command="{Binding ChangePageCommand}"
			CommandParameter="AccountPage"/>
	</ContentPage.ToolbarItems>


	<ContentPage.Content>

		<Grid BackgroundColor="FloralWhite" Padding="20" RowSpacing="20" ColumnSpacing="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="3*" />
				<RowDefinition Height="2.7*" />
				<RowDefinition Height="2.7*" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="5*" />
				<ColumnDefinition Width="5*" />
			</Grid.ColumnDefinitions>


			<!-- BackgroundColor="#d9ae6a"  Bisque DarkKhaki -->
			<!--  Cloudy or Rainy:  Gainsboro -->
			<!--  Sunny:  LemonChiffon  LightGoldenrodYellow  Moccasin-->
			<!-- IMAGES:   https://www.flaticon.com/packs/weather-142     https://www.flaticon.com/packs/weather-214   https://www.flaticon.com/packs/weather-255  -->
			<Frame 
				x:Name="weatherframe"
				
				BackgroundColor="Gainsboro" 
				Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="15" 
				HasShadow="False">
				
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*" />
						<RowDefinition Height="3*" />
						<RowDefinition Height="4*" />
					</Grid.RowDefinitions>

					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>


					<StackLayout Grid.ColumnSpan="4" Grid.Row="1" Orientation="Vertical" Spacing="0" HorizontalOptions="CenterAndExpand">
						<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="0">
							<Label x:Name="temperatureTxt" TextColor="Black" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center"/>
							<Label Text="°" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
						</StackLayout>
						<Label Text="Fahrenheit" TextColor="Black" FontSize="Small" HorizontalOptions="Center"/>
					</StackLayout>

					<StackLayout Grid.Column="0" Grid.Row="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
						<Image Source="WeatherHumidity.png" HeightRequest="30" HorizontalOptions="Center"/>
						<StackLayout>
							<Label x:Name="humidityTxt" Style="{DynamicResource WeatherMainPage}"/>
							<Label Text="Humidity" TextColor="Black" Margin="0,-5,0,0" FontSize="Small" HorizontalOptions="Center"/>
						</StackLayout>
					</StackLayout>

					<StackLayout Grid.Column="1" Grid.Row="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
						<Image Source="WeatherWind.png" HeightRequest="30" HorizontalOptions="Center"/>
						<StackLayout>
							<Label x:Name="windTxt" Style="{DynamicResource WeatherMainPage}"/>
							<Label Text="Wind" TextColor="Black" Margin="0,-5,0,0" FontSize="Small" HorizontalOptions="Center"/>
						</StackLayout>
					</StackLayout>

					<StackLayout Grid.Column="2" Grid.Row="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
						<Image Source="WeatherPressure.png" HeightRequest="30" HorizontalOptions="Center"/>
						<StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
							<Label x:Name="pressureTxt" Style="{DynamicResource WeatherMainPage}"/>
							<Label Text="Pressure" TextColor="Black" Margin="0,-5,0,0" FontSize="Small" HorizontalOptions="Center"/>
						</StackLayout>
					</StackLayout>

					<StackLayout Grid.Column="3" Grid.Row="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
						<Image Source="WeatherClouds.png" HeightRequest="30" HorizontalOptions="Center"/>
						<StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
							<Label x:Name="cloudinessTxt" Style="{DynamicResource WeatherMainPage}"/>
							<Label Text="Cloudiness" TextColor="Black" Margin="0,-5,0,0" FontSize="Small" HorizontalOptions="Center"/>
						</StackLayout>
					</StackLayout>

				</Grid>

			</Frame>


			<ImageButton x:Name="RunPivotPage"
				Source="RunPivot"
				Aspect="AspectFit"
				Command="{Binding ChangePageCommand}" CommandParameter="RunPivotPage"
				BackgroundColor="#87baed" Grid.Column="0" Grid.Row="1" CornerRadius="20">
			</ImageButton>

			<ImageButton x:Name="AddFieldPage" 
				Source="AddField"
				Aspect="AspectFit"
				Command="{Binding ChangePageCommand}" CommandParameter="AddFieldPage"
				BackgroundColor="#a8b655" Grid.Column="1" Grid.Row="1" CornerRadius="20">
			</ImageButton>

			<ImageButton x:Name="FieldListPage" 
				Source="FieldList"
				Aspect="AspectFit"
				Command="{Binding ChangePageCommand}" CommandParameter="FieldListPage"
				BackgroundColor="#ccb187" Grid.Column="0" Grid.Row="2" CornerRadius="20">
			</ImageButton>

			<ImageButton x:Name="AccountPage" 
				Source="Account"
				Aspect="AspectFit"
				Command="{Binding ChangePageCommand}" CommandParameter="AccountPage"
				BackgroundColor="#bc9cb4" Grid.Column="1" Grid.Row="2" CornerRadius="20">
				<!--  #bc9cb4 -->
			</ImageButton>

		</Grid>

		
	</ContentPage.Content>
</ContentPage>
	
	
